library
  exposed-modules:     BGFX
  -- other-modules:
  other-extensions:    ForeignFunctionInterface
  build-depends:       base >=4.8 && <4.9
  hs-source-dirs:      src
  default-language:    Haskell2010
  extra-libraries: bgfx, GL
  pkgconfig-depends: bgfx

executable hello
  build-depends: base, bgfx, sdl2
  main-is: Hello.hs
  extra-libraries: GL
  c-sources:
    cbits/sdl-bgfx.c